import java.util.Scanner;
public class act2{
    public static void main(String args[]) {
        // TODO code application logic here
        Scanner entrada = new Scanner(System.in);
        
        System.out.println("Ingrese su nombre: "); 
        String nombre = entrada.nextLine();
        System.out.println("Ingrese su apellido: "); 
        String apellido = entrada.nextLine();
        System.out.println("Ingrese su edad: ");
        String edad = entrada.nextLine();
        System.out.println("Ingrese su hobbie: "); 
        String hobbie = entrada.nextLine();
        System.out.println("Ingrese su editor de codigo favorito: ");
        String editor = entrada.nextLine();
        System.out.println("Ingrese el sistema operativo que utiliza: "); 
        String os = entrada.nextLine();
        
        System.out.print("\n\n LOS RESULTADOS INGRESADOS SON:\n\n");
        System.out.println("nombre: " + nombre);
        System.out.println("apellido: " + apellido);
        System.out.println("edad: " + edad);
        System.out.println("hobbie: " + hobbie);
        System.out.println("editor favorito: " + editor);
        System.out.println("SO utilizado: " + os);
    }
}



    


